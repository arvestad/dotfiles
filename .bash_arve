# Syntax highlighiting in the console
function codecat()
{
   pygmentize -f terminal256  -g  "$1"
}


# Set the title in iTerm2 tabs
function title ()
{
   TITLE=$*;
   export PROMPT_COMMAND='echo -ne "\033]0;$TITLE\007"'
}

